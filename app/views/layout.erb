<!DOCTYPE html>
<html>
<head>
  <title></title>
  <%= css :application %>
  <%= js :application %>
</head>
  <body>
    <header>
    <nav>
      <div class="custom-wrapper pure-g" id="menu">
          <div class="pure-u-1 pure-u-md-1-3">
              <div class="pure-menu">
                  <a href="/" class="pure-menu-heading custom-brand">alize</a>

                  <a href="#" class="custom-toggle" id="toggle"><s class="bar"></s><s class="bar"></s></a>
              </div>
          </div>

          <div class="pure-u-1 pure-u-md-1-3">
              <div class="pure-menu pure-menu-horizontal custom-can-transform">
                  <ul class="pure-menu-list">
                      <% if is_logged_in? %>
                      <li class="pure-menu-item"><a href="/users" class="pure-menu-link">discover</a></li>
                      <li class="pure-menu-item"><a href="/users/<%= current_user.id %>" class="pure-menu-link">profile</a></li>                      
                      <li class="pure-menu-item"><a href="/users/<%= current_user.id %>/edit" class="pure-menu-link">edit profile</a></li>
                      <li class="pure-menu-item"><a href="/tracks/new" class="pure-menu-link">upload</a></li>
                      <li class="pure-menu-item"><a href="/playlists" class="pure-menu-link">playlists</a></li>
                      <li class="pure-menu-item"><a href="/logout" class="pure-menu-link">logout</a></li>
                      <% else %>
                      <li class="pure-menu-item"><a href="/register" class="pure-menu-link">sign up</a></li>
                      <li class="pure-menu-item"><a href="/login" class="pure-menu-link">log in</a></li>
                      <% end %>
                  </ul>
              </div>
          </div>
          <div class="pure-u-1 pure-u-md-1-3">
              <div class="pure-menu pure-menu-horizontal custom-menu-3 custom-can-transform">
                  <ul class="pure-menu-list">
                      <li class="pure-menu-item"><input type="text"> <input class="search" type="submit" value="search"></li>

                  </ul>
              </div>
          </div>
      </div>
      </nav>
    </header>
    <main class="container">
      <%= styled_flash %>
      <%= yield %>
    <main>
  </body>
</html>