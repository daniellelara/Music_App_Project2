
<% if @current_user == @user %>
  <p><%= @user.username %></p>
  <p><a href="/tracks">my tracks </a>|<a href="/playlists">my playlists</a>|<a href="/users/<%= @user.id %>/edit"> edit profile</a>
  <% if @user.image_identifier %>
    <img class="media-object" src="/uploads/images/<%= @user.image_identifier %>" alt="<%= @user.username %>'s image" width=150 height=150 align="left">
  <% else %>
    <img class="media-object" src="/images/default.png" alt="<%= @user.username %>'s image">
  <% end %>
  <p><%= @user.name %></p>
  <p><%= @user.email %></p>
  <p><%= @user.city %></p>
  <form method="post" action="/users/<%= @user.id %>">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete" class="btn btn-default">
  </form>
  
<% else %>
  
  <% if @user.image_identifier %>
    <img class="media-object" src="/uploads/images/<%= @user.image_identifier %>" alt="<%= @user.username %>'s image" width=150 height=150 align="left">
  <% else %>
    <img class="media-object" src="/images/default.png" alt="<%= @user.username %>'s image">
  <% end %>
  <%= @user.name %> / <%= @user.city %>
  <div class="pure-g">
    <% @tracks.each do |track| %>
      <div class="pure-u-1 pure-u-md-1-3 tracks">
        <% if track.image.url %>
          <img class="track-pic" src="<%= track.image.url %>" width=50 height=50>
        <% else %>
          <img class="track-pic" src="/uploads/H06-anika.jpg" width=50 height=50>
        <% end %>

        <canvas class="track-canvas">
          An alternative text describing what your canvas displays. 
        </canvas>

        <div class="track-margin">
          <audio class="inline" preload="none" src="<%= track.file.url %>"></audio>
          <a class="inline" href="/tracks/<%= track.id %>"><%= track.title %> / <%= track.artist %></a>
          <form method="POST" class="inline" action="/tracks/<%= track.id %>">
            <input type="hidden" name="_method" value="PUT">
            <select name="playlist_id">
              <% current_user.playlists.each do |playlist| %>
              <option value="<%= playlist.id %>"><%= playlist.title %></option>
              <% end %>
            </select>
            <input class="button-xsmall pure-button" type="submit" value="add">
          </form>
          <a class="inline" href="/uploads/audio/<%= track.file %>" download>download</a>
          
          <div class ="inline control message-track"></div>
          <div class="inline control play-bt-track">play</div>
          <div class="inline control pause-bt-track"></div>
          
          
        </div>

        
        
        
      </div>
      <% end %>

    <% @playlists.each do |playlist| %>
      <div class="pure-u-1 pure-u-md-1-3">
        <a href="/playlists/<%= playlist.id %>"><%= playlist.title %></a>
        <% if playlist.image_identifier %>
          <img class="media-object" src="/uploads/images/<%= playlist.image_identifier %>" width=50 height=50>
        <% else %>
          <img class="media-object" src="/uploads/H06-anika.jpg" width=50 height=50>
        <% end %>  
       
          
    <% end %>
  </div>
</div>    
<% end %>
