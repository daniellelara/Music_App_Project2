<h2>All Users</h2>
<ul class="media-list">
  <% @users.each do |user| %>
    <li class="media">
      <div class="media-left">
        <a href="/users/<%= user.id %>">
          <% if user.image_identifier %>
            <img class="media-object" src="/uploads/<%= user.image_identifier %>" alt="<%= user.username %>'s image" width=100 height=100 >
          <% else %>
            <img class="media-object" src="/images/default.png" alt="<%= user.username %>'s image">
          <% end %>
        </a>
      </div>
      <div class="media-body">
        <a href="/users/<%= user.id %>">
          <h4 class="media-heading"><%= user.username %></h4>
        </a>
        <%= user.email %>
      </div>
    </li>
  <% end %>
</ul>