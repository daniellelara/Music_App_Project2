<p>sign up</p>
<% @user.errors.full_messages.each do |error| %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= error %>
  </div>
<% end %>
<form id="register" class="pure-form pure-form-stacked" method="post" action="/users">
  
    <fieldset>
        

        <label for="name">name</label>
        <input name="user[name]" type="text" class="form-control" id="username" placeholder="name" value="<%= @user.name %>">

        <label for="username">Username</label>
        <input name="user[username]" type="text" class="form-control" id="username" placeholder="Username" value="<%= @user.username %>">

        <label for="image">Image</label>
        <input name="user[image]" type="file" class="form-control" id="image" value="<%= @user.image %>">

        <label for="email">e-mail address</label>
        <input name="user[email]" type="email" class="form-control" id="email" placeholder="Email" value="<%= @user.email %>">

        <label for="city">city</label>
        <input name="user[city]" type="text" class="form-control" id="city" placeholder="city" value="<%= @user.city %>">


        <button type="submit" class="pure-button pure-button-primary">update</button>
    </fieldset>
</form>
