<h2><%= @playlist.title %></h2>

<form method="post" action="/playlists/<%= @playlist.id %>">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete" class="btn btn-default">
</form>

<% if @tracks == [] %>
  <p>Please add some <a href="/tracks">tracks</a></p> 
<% else %>
  <div class="pure-g playlist">
      <canvas class="playlist-canvas">
       An alternative text describing what your canvas displays. 
      </canvas>
      <audio></audio>

    <div class="pure-u-1 pure-u-md-1-3 controller">
      <div class ="message"></div>
      <a id="play-bt" href="#">play</a>
      <a id="pause-bt" href="#">pause</a>
      <a id="stop-bt" href="#">stop</a>
      <a id="next-bt" href="#">next</a>
      <a id="previous-bt" href="#">previous</a>
      <a id="play-all" href="#">play all</a>
    </div>

    <% @tracks.each do |track| %>
    <div class="pure-u-1 pure-u-md-1-3 playlist_tracks">
      <input class="filename" type="hidden" value="<%= track.file.url %>">
      <%= track.title %>
      <form method="POST" action="/playlists/<%= @playlist.id %>/tracks/<%= track.id %>">
        <input type="hidden" name="_method" value="DELETE"> 
        <input type="submit" value="Delete" class="btn btn-default">
      </form>
    </div>
    <% end %>
  </div> 
<% end %>